<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.iTweetClient.actvities.TimelineActivity">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="true"
        android:textSize="14sp"
        android:textColor="#000000"
        app:pstsDividerColor="@android:color/holo_purple"
        app:pstsIndicatorColor="@android:color/holo_blue_dark"
        app:pstsUnderlineColor="@android:color/holo_green_dark"
        app:pstsTabPaddingLeftRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:background="@android:color/white">
    </android.support.v4.view.ViewPager>


</RelativeLayout>
